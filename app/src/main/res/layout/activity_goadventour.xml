<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Define your time"
        android:id="@+id/textTime"
        android:paddingTop="16dp"
        android:textSize="12dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTime"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Define what excites you"
        android:id="@+id/textCategory"
        android:paddingTop="16dp"
        android:textSize="12dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editCategory"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check your wallet"
        android:id="@+id/textWallet"
        android:paddingTop="16dp"
        android:textSize="12dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editWallet"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="72dp"
        android:paddingLeft="12dp"
        android:text="You are now in Semarang"
        android:id="@+id/textLocation"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect? Click Here"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btnLocation"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="20dp"
        android:text="Go"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnGo"/>

</LinearLayout>